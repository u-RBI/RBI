---
interface Props {
  name: string;
  role: string;
  image: string;
  bio?: string;
}

const { name, role, image, bio } = Astro.props;
---

<div class='border-4 border-black p-6 bg-white flex flex-col items-center gap-4'>
  <img
    src={image}
    alt={name}
    class='w-32 h-32 rounded-full object-cover border-4 border-black'
  />
  <div class='text-center'>
    <h3 class='text-2xl font-bold dm-serif'>{name}</h3>
    <p class='text-lg text-gray-600 poppins'>{role}</p>
    {bio && <p class='text-sm mt-2 poppins'>{bio}</p>}
  </div>
</div>
