---
interface Props {
  name: string;
  role: string;
  image: string;
  bio?: string;
  twitter?: string;
  discord?: string; // invite link
  itch?: string; // itch.io profile or project URL
  twitch?: string;
}

const { name, role, image, bio, twitter, discord, itch } = Astro.props;
---

<div class='border-4 border-black p-6 bg-white flex flex-col items-center gap-4'>
  <img
    src={image}
    alt={name}
    class='w-32 h-32 rounded-full object-cover border-4 border-black'
  />
  <div class='text-center'>
    <h3 class='text-2xl font-bold sanchez flex items-center justify-center gap-2'>
      {name}
      {twitter && (
        <a
          href={twitter}
          target='_blank'
          rel='noopener noreferrer'
          class='hover:text-green transition-all duration-150 ease-in-out'
          title={`Follow ${name} on Twitter`}
        >
          <div class='i-uil-twitter w-5 h-5'></div>
          <span class='sr-only'>Twitter</span>
        </a>
      )}
    </h3>
    <p class='text-lg text-gray-600 sanchez'>{role}</p>
    {bio && <p class='text-sm mt-2 sanchez'>{bio}</p>}
    {(discord || itch) && (
      <ul class='flex justify-center gap-4 mt-4'>
        {discord && (
          <li>
            <a
              href={discord}
              target='_blank'
              rel='noopener noreferrer'
              class='hover:text-green transition-all duration-150 ease-in-out'
              title={`Join ${name} on Discord`}
            >
              <div class='i-uil-discord w-6 h-6'></div>
              <span class='sr-only'>Discord</span>
            </a>
          </li>
        )}
        {itch && (
          <li>
            <a
              href={itch}
              target='_blank'
              rel='noopener noreferrer'
              class='hover:text-green transition-all duration-150 ease-in-out flex items-center'
              title={`View ${name} on itch.io`}
            >
              <div class='w-6 h-6 relative'>
                <div class='i-logos-itchdotio w-6 h-6 absolute inset-0'></div>
                <svg
                  class='w-6 h-6 absolute inset-0 pointer-events-none'
                  viewBox='0 0 64 64'
                  xmlns='http://www.w3.org/2000/svg'
                  aria-hidden='true'
                  focusable='false'
                >
                  <rect width='64' height='64' rx='12' fill='#FA5C5C' />
                  <path d='M20 18h24v8h6v12h-6v8H20v-8h-6V26h6v-8Zm6 8v12h12V26H26Z' fill='white'/>
                </svg>
              </div>
              <span class='sr-only'>Itch.io</span>
            </a>
          </li>
        )}
      </ul>
    )}
  </div>
</div>
