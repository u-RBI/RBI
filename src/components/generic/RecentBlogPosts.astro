---
import { getCollection } from 'astro:content';
import BlogList from '../blog/BlogList.astro';
import { Card } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';

interface Props {
  count?: number;
}

const { count } = Astro.props;

const posts = await getCollection('blog').then((posts) =>
  posts.reverse().slice(0, count ?? 3)
);
---

<section class='mt-8'>
  <Card color="#00377e">
    <div class='flex flex-col justify-between items-start gap-4 p-6'>
      <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 outfit text-white'>
        Recent Dev Logs
      </h2>
      <div class='hidden md:block'>
        <Button href='/devlogs/'>Go to Dev Logs &rarr;</Button>
      </div>
      <div class='block md:hidden'>
        <Button href='/devlogs/'>to Dev Log</Button>
      </div>
    </div>
    <div class='px-6 pb-6'>
      <BlogList posts={posts} />
    </div>
  </Card>
</section>
