---
import Layout from '@layouts/Default.astro';
import TeamMemberCard from '@components/team/TeamMemberCard.astro';
import { Card, Button } from '@eliancodes/brutal-ui';

const teamMembers = [
  {
    name: 'RMG',
    role: 'Cofounder',
    image: '/icon/rose.png'
  },
  {
    name: 'JCB',
    role: 'Cofounder',
    image: '/icon/Cheems.jpeg'
  },
];
---

<Layout
  title='Team'
  description='Meet the RBI Studios team'
  pageTitle='Our Team'
  bgColor='bg-purple'
>
  <main class='flex-1 p-6'>
    <section class='max-w-6xl mx-auto'>
      <h1 class='text-4xl md:text-6xl font-bold mb-12 text-center dm-serif'>
        Our Team
      </h1>

      <div class='grid md:grid-cols-2 gap-8 mb-12'>
        {teamMembers.map((member) => (
          <TeamMemberCard
            name={member.name}
            role={member.role}
            image={member.image}
          />
        ))}
      </div>

      <Card color = "#2dd4bf">
        <div class='flex flex-col items-center gap-6 p-8'>
          <h2 class='text-3xl md:text-5xl font-bold dm-serif'>Get in Touch</h2>
          <p class='text-center text-lg poppins max-w-2xl'>
            Have a question or want to work with us? We'd love to hear from you!
          </p>
          <Button href='mailto:interact@rbistudios.com'>
            Contact Us &rarr;
          </Button>
        </div>
      </Card>
    </section>
  </main>
</Layout>
